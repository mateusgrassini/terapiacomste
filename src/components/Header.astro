---
const navItems = [
  { label: "Início", href: "#inicio" },
  { label: "Sobre Mim", href: "#sobre" },
  { label: "Benefícios", href: "#beneficios" },
  { label: "Como Funciona", href: "#como-funciona" },
  { label: "TCC", href: "#tcc" },
  { label: "Serviços", href: "#servicos" },
  { label: "Contato", href: "#contato" }
];
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="navbar">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="#inicio" class="text-xl font-semibold text-primary-700 hover:text-primary-600 transition-colors duration-300">
      Stephanie Perassollo
    </a>
    
    <!-- Mobile menu button -->
    <button id="mobile-menu-button" class="lg:hidden text-neutral-700 focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
    
    <!-- Desktop navigation -->
    <nav class="hidden lg:flex items-center space-x-8">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="text-neutral-600 hover:text-primary-700 font-medium transition-colors duration-300"
        >
          {item.label}
        </a>
      ))}
      <a href="#contato" class="inline-block px-5 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 transition-colors duration-300 shadow-sm">
        Agende uma Consulta
      </a>
    </nav>
  </div>
  
  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden lg:hidden bg-white shadow-md absolute top-full left-0 right-0">
    <div class="container mx-auto px-4 py-2">
      <nav class="flex flex-col space-y-3 py-3">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class="text-neutral-600 hover:text-primary-700 font-medium transition-colors duration-300 py-2"
          >
            {item.label}
          </a>
        ))}
        <a href="#contato" class="inline-block px-5 py-2 mt-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 transition-colors duration-300 shadow-sm text-center">
          Agende uma Consulta
        </a>
      </nav>
    </div>
  </div>
</header>

<script>
  // Handle navbar background on scroll
  const navbar = document.getElementById('navbar');
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  // Initial navbar state based on scroll position
  document.addEventListener('DOMContentLoaded', () => {
    updateNavbarBackground();
  });
  
  // Toggle mobile menu
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
    
    // Close mobile menu when clicking a link
    document.querySelectorAll('#mobile-menu a').forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('hidden');
      });
    });
  }
  
  // Update navbar background on scroll
  window.addEventListener('scroll', updateNavbarBackground);
  
  function updateNavbarBackground() {
    if (navbar) {
      if (window.scrollY > 10) {
        navbar.classList.add('bg-white', 'shadow-md');
      } else {
        navbar.classList.remove('bg-white', 'shadow-md');
      }
    }
  }
</script>